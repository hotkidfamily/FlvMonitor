<?xml version="1.0" encoding="utf-8"?>
<WinEx:WindowEx x:Class="FlvMonitor.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:local="using:FlvMonitor"
                xmlns:WinEx="using:WinUIEx"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                mc:Ignorable="d"
                Title="FlvMonitor">

    <Grid AllowDrop="True"
          DragLeave="Grid_DragOver">
        <Grid.Resources>
            <local:ListViewItemOEConverter x:Key="ListViewItemOEConverter" />
            <local:ListViewAVFrameIntervalConverter x:Key="ListViewAVFrameIntervalConverter" />
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                        Spacing="8"
                        VerticalAlignment="Center">
                <Button Height="36">
                    <Image Source="Assets/i36_dv.png"/>
                </Button>
                <Button Height="36">
                    <Image Source="Assets/url.png"/>
                </Button>
                <ComboBox VerticalAlignment="Center"
                          Height="36">
                    <ComboBoxItem Content="All Tags" IsSelected="True"/>
                    <ComboBoxItem Content="Video Tags" />
                    <ComboBoxItem Content="Audio Tags" />
                </ComboBox>
            </StackPanel>
            <ProgressBar Grid.Column="1"
                         Name="PBLoading"
                         Margin="4, 0, 4, 0"
                         Minimum="0"
                         Maximum="100"
                         Background="AliceBlue"
                         Foreground="AntiqueWhite"
                         MinHeight="8" />
        </Grid>
        
        <ListView Grid.Row="1"
                  Name="LVMain"
                  SelectionMode="Single">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="8*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                            <ColumnDefinition Width="15*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="10*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="16,0,0,0">TagType</TextBlock>
                        <TextBlock Grid.Column="1" VerticalAlignment="Center">FrameId</TextBlock>
                        <TextBlock Grid.Column="2" VerticalAlignment="Center">Offset</TextBlock>
                        <TextBlock Grid.Column="3" VerticalAlignment="Center">TagSize</TextBlock>
                        <TextBlock Grid.Column="4" VerticalAlignment="Center">NalType</TextBlock>
                        <TextBlock Grid.Column="5" VerticalAlignment="Center">CodecId</TextBlock>
                        <TextBlock Grid.Column="6" VerticalAlignment="Center">PTS</TextBlock>
                        <TextBlock Grid.Column="7" VerticalAlignment="Center">Interval</TextBlock>
                        <TextBlock Grid.Column="8" VerticalAlignment="Center">-</TextBlock>
                        <TextBlock Grid.Column="9" VerticalAlignment="Center">Image</TextBlock>
                    </Grid>
                </DataTemplate>
            </ListView.HeaderTemplate>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding Converter={StaticResource ListViewItemOEConverter}, ConverterParameter={Binding FrameId}}"
                          MinHeight="36" Height="36">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="8*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="20*" />
                            <ColumnDefinition Width="8*" />
                            <ColumnDefinition Width="15*" />
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="10*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="{Binding TagType}"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding FrameId}"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="2"
                                   Text="{Binding Offset}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3"
                                   Text="{Binding TagSize}"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="4"
                                   Text="{Binding NalType}"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="5"
                                   Text="{Binding CodecId}"
                                   TextWrapping="NoWrap"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="6"
                                   Text="{Binding PTS}"
                                   VerticalAlignment="Center" />
                        <TextBlock Grid.Column="7"
                                   Text="{Binding Converter={StaticResource ListViewAVFrameIntervalConverter}, ConverterParameter={Binding VPD}}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="8"
                                   Text="-"
                                   VerticalAlignment="Center"/>
                        <ImageIcon Grid.Column="9"
                                   Source="{Binding Image}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</WinEx:WindowEx>

